<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    
    <!-- H2 In-Memory Database Configuration (Default for Development) -->
    <persistence-unit name="TournamentPU-H2" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <!-- Entity Classes -->
        <class>com.example.tournament.model.User</class>
        <class>com.example.tournament.model.Administrator</class>
        <class>com.example.tournament.model.TeamManager</class>
        <class>com.example.tournament.model.Organizer</class>
        <class>com.example.tournament.model.EventOrganizer</class>
        <class>com.example.tournament.model.Team</class>
        <class>com.example.tournament.model.Tournament</class>
        <class>com.example.tournament.model.LeagueTournament</class>
        <class>com.example.tournament.model.KnockoutTournament</class>
        <class>com.example.tournament.model.Match</class>
        <class>com.example.tournament.model.Venue</class>
        <class>com.example.tournament.model.Sport</class>
        <class>com.example.tournament.model.TimeSlot</class>
        
        <properties>
            <!-- H2 Database Connection -->
            <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:mem:tournamentdb;DB_CLOSE_DELAY=-1"/>
            <property name="jakarta.persistence.jdbc.user" value="sa"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>
            
            <!-- Hibernate Properties -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            
            <!-- Connection Pool -->
            <property name="hibernate.hikari.minimumIdle" value="5"/>
            <property name="hibernate.hikari.maximumPoolSize" value="10"/>
            <property name="hibernate.hikari.idleTimeout" value="300000"/>
        </properties>
    </persistence-unit>
    
