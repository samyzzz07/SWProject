<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.tournament.ui.PlayerController">
    
    <top>
        <VBox spacing="10" style="-fx-background-color: #2196F3; -fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label fx:id="welcomeLabel" text="Welcome, Player" textFill="white" HBox.hgrow="ALWAYS">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Label>
                <Button text="Logout" onAction="#handleLogout" 
                        style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold;"
                        prefWidth="100" prefHeight="35"/>
            </HBox>
            <Label text="View Tournaments | View Sports | Register Team | Update Team" textFill="white">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
        </VBox>
    </top>
    
    <center>
        <SplitPane dividerPositions="0.5">
            
            <!-- Left Panel: View Tournament and Sports -->
            <VBox spacing="15" style="-fx-padding: 20;">
                <Label text="View Tournaments" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                <ListView fx:id="tournamentListView" prefHeight="200.0"/>
                <Button text="View Details" onAction="#handleViewTournamentDetails" 
                        style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                
                <Separator/>
                
                <Label text="View Sports" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                <ListView fx:id="sportListView" prefHeight="200.0"/>
                <Button text="View Details" onAction="#handleViewSportDetails" 
                        style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
            </VBox>
            
            <!-- Right Panel: Register and Update Team -->
            <VBox spacing="15" style="-fx-padding: 20;">
                <Label text="Register Team" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                
                <VBox spacing="8">
                    <Label text="Team Name:"/>
                    <TextField fx:id="teamNameField" promptText="Enter team name"/>
                </VBox>
                
                <VBox spacing="8">
                    <Label text="Contact Information:"/>
                    <TextField fx:id="contactInfoField" promptText="Enter contact info"/>
                </VBox>
                
                <Button fx:id="registerTeamButton" text="Register Team" onAction="#handleRegisterTeam"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"/>
                
                <Separator/>
                
                <Label text="Update Team Information" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                <TextArea fx:id="teamInfoTextArea" promptText="Enter team updates" prefHeight="150.0"/>
                <Button fx:id="updateTeamButton" text="Update Team" onAction="#handleUpdateTeam"
                        style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </VBox>
            
        </SplitPane>
    </center>
    
    <bottom>
        <HBox style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
            <Label text="Status: " style="-fx-font-weight: bold;"/>
            <Label fx:id="statusLabel" text="Ready"/>
        </HBox>
    </bottom>
    
</BorderPane>
