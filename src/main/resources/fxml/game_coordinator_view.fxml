<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.tournament.ui.GameCoordinatorController">
    
    <top>
        <VBox spacing="10" style="-fx-background-color: #2196F3; -fx-padding: 20;">
            <Label fx:id="welcomeLabel" text="Welcome, Game Coordinator" textFill="white">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
            </Label>
            <Label text="Full Tournament Management Access" textFill="white">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
        </VBox>
    </top>
    
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            
            <!-- Tab 1: Schedule and Scoring -->
            <Tab text="Schedule &amp; Scoring">
                <VBox spacing="15" style="-fx-padding: 20;">
                    <Label text="View Schedule" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                    <ListView fx:id="scheduleListView" prefHeight="250.0"/>
                    
                    <HBox spacing="10">
                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                            <Label text="Team 1 Score:"/>
                            <TextField fx:id="team1ScoreField" promptText="Enter score"/>
                        </VBox>
                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                            <Label text="Team 2 Score:"/>
                            <TextField fx:id="team2ScoreField" promptText="Enter score"/>
                        </VBox>
                        <Button fx:id="postScoreButton" text="Post Score" onAction="#handlePostScore"
                                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"
                                prefHeight="50.0"/>
                    </HBox>
                </VBox>
            </Tab>
            
            <!-- Tab 2: Tournament Management -->
            <Tab text="Tournament Management">
                <VBox spacing="15" style="-fx-padding: 20;">
                    <Label text="Active Tournaments" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                    <ListView fx:id="tournamentListView" prefHeight="300.0"/>
                    
                    <HBox spacing="10">
                        <Button fx:id="finalizeButton" text="Finalize Tournament" onAction="#handleFinalizeTournament"
                                style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold;"
                                prefWidth="150.0"/>
                        <Button fx:id="addGameButton" text="Add Game" onAction="#handleAddGame"
                                style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold;"
                                prefWidth="150.0"/>
                        <Button text="Collect Fees" onAction="#handleCollectFees"
                                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;"
                                prefWidth="150.0"/>
                    </HBox>
                </VBox>
            </Tab>
            
            <!-- Tab 3: Referee Management -->
            <Tab text="Referee Management">
                <VBox spacing="15" style="-fx-padding: 20;">
                    <Label text="Manage Referees" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                    <ListView fx:id="refereeListView" prefHeight="350.0"/>
                    
                    <Button fx:id="manageRefereeButton" text="Add/Edit/Remove Referee" onAction="#handleManageReferee"
                            style="-fx-background-color: #9C27B0; -fx-text-fill: white; -fx-font-weight: bold;"
                            prefWidth="200.0"/>
                </VBox>
            </Tab>
            
        </TabPane>
    </center>
    
    <bottom>
        <HBox style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
            <Label text="Status: " style="-fx-font-weight: bold;"/>
            <Label fx:id="statusLabel" text="Ready"/>
        </HBox>
    </bottom>
    
</BorderPane>
