<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.tournament.ui.GameCoordinatorController">
    
    <top>
        <VBox spacing="10" style="-fx-background-color: #2196F3; -fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label fx:id="welcomeLabel" text="Welcome, Game Coordinator" textFill="white" HBox.hgrow="ALWAYS">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Label>
                <Button text="Logout" onAction="#handleLogout" 
                        style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold;"
                        prefWidth="100" prefHeight="35"/>
            </HBox>
            <Label text="Tournament Coordination Dashboard" textFill="white">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="30" style="-fx-padding: 40;" alignment="CENTER">
            
            <Label text="Game Coordinator Functions" style="-fx-font-weight: bold; -fx-font-size: 20px;"/>
            
            <!-- Manage Time Windows Button -->
            <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #f5f5f5; -fx-border-color: #ddd; -fx-border-radius: 10; -fx-background-radius: 10;">
                <Button text="Manage Time Windows" onAction="#manageTimeWindows"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;"
                        prefWidth="350" prefHeight="60"/>
                <Label text="Schedule and manage time slots for tournament matches" 
                       style="-fx-text-fill: #666; -fx-font-size: 12px;"/>
            </VBox>
            
            <!-- Record Result Button -->
            <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #f5f5f5; -fx-border-color: #ddd; -fx-border-radius: 10; -fx-background-radius: 10;">
                <Button text="Record Result" onAction="#recordResult"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;"
                        prefWidth="350" prefHeight="60"/>
                <Label text="Record and save match results to the database" 
                       style="-fx-text-fill: #666; -fx-font-size: 12px;"/>
            </VBox>
            
            <!-- Compute Standings Button -->
            <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #f5f5f5; -fx-border-color: #ddd; -fx-border-radius: 10; -fx-background-radius: 10;">
                <Button text="Compute Standings" onAction="#computeStandings"
                        style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;"
                        prefWidth="350" prefHeight="60"/>
                <Label text="Calculate and update tournament standings" 
                       style="-fx-text-fill: #666; -fx-font-size: 12px;"/>
            </VBox>
            
            <!-- Manage Venues Button -->
            <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #f5f5f5; -fx-border-color: #ddd; -fx-border-radius: 10; -fx-background-radius: 10;">
                <Button text="Manage Venues" onAction="#manageVenues"
                        style="-fx-background-color: #9C27B0; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;"
                        prefWidth="350" prefHeight="60"/>
                <Label text="Add and manage tournament venues" 
                       style="-fx-text-fill: #666; -fx-font-size: 12px;"/>
            </VBox>
            
        </VBox>
    </center>
    
    <bottom>
        <HBox style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
            <Label text="Status: " style="-fx-font-weight: bold;"/>
            <Label fx:id="statusLabel" text="Ready"/>
        </HBox>
    </bottom>
    
</BorderPane>
