<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.tournament.ui.UserProfileController">
    
    <top>
        <VBox spacing="10" style="-fx-background-color: #673AB7; -fx-padding: 20;">
            <Label fx:id="welcomeLabel" text="User Profile" textFill="white">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
            </Label>
            <Label text="View and Update Your Profile Information" textFill="white">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="20" style="-fx-padding: 40;">
            
            <!-- Profile Information Section -->
            <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #f5f5f5; -fx-background-radius: 5;">
                <Label text="Profile Information" style="-fx-font-weight: bold; -fx-font-size: 18px;"/>
                
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label fx:id="userIdLabel" text="User ID: " style="-fx-font-size: 14px;"/>
                </HBox>
                
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label fx:id="usernameLabel" text="Username: " style="-fx-font-size: 14px;"/>
                </HBox>
                
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label fx:id="roleLabel" text="Role: " style="-fx-font-size: 14px;"/>
                </HBox>
            </VBox>
            
            <!-- Update Email Section -->
            <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #f5f5f5; -fx-background-radius: 5;">
                <Label text="Update Email" style="-fx-font-weight: bold; -fx-font-size: 18px;"/>
                
                <VBox spacing="8">
                    <Label text="Email Address:"/>
                    <TextField fx:id="emailField" promptText="Enter your email"/>
                </VBox>
                
                <Button fx:id="updateEmailButton" text="Update Email" onAction="#handleUpdateEmail"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 200;"/>
            </VBox>
            
            <!-- Change Password Section -->
            <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #f5f5f5; -fx-background-radius: 5;">
                <Label text="Change Password" style="-fx-font-weight: bold; -fx-font-size: 18px;"/>
                
                <VBox spacing="8">
                    <Label text="Current Password:"/>
                    <PasswordField fx:id="currentPasswordField" promptText="Enter current password"/>
                </VBox>
                
                <VBox spacing="8">
                    <Label text="New Password:"/>
                    <PasswordField fx:id="newPasswordField" promptText="Enter new password"/>
                </VBox>
                
                <VBox spacing="8">
                    <Label text="Confirm New Password:"/>
                    <PasswordField fx:id="confirmPasswordField" promptText="Confirm new password"/>
                </VBox>
                
                <Button fx:id="changePasswordButton" text="Change Password" onAction="#handleChangePassword"
                        style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 200;"/>
            </VBox>
            
            <!-- Back Button -->
            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="backButton" text="â† Back to Dashboard" onAction="#handleBack"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 200;"/>
            </HBox>
            
        </VBox>
    </center>
    
    <bottom>
        <HBox style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
            <Label text="Status: " style="-fx-font-weight: bold;"/>
            <Label fx:id="statusLabel" text="Ready"/>
        </HBox>
    </bottom>
    
</BorderPane>
