<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.example.tournament.ui.TournamentOrganizerController">
    
    <!-- Top Section: Title -->
    <top>
        <VBox spacing="10" style="-fx-background-color: #2196F3; -fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label text="Tournament Management System" textFill="white">
                        <font>
                            <Font name="System Bold" size="24.0"/>
                        </font>
                    </Label>
                    <Label fx:id="welcomeLabel" text="Tournament Organizer Dashboard" textFill="white">
                        <font>
                            <Font size="14.0"/>
                        </font>
                    </Label>
                </VBox>
                <Button text="Logout" onAction="#handleLogout" 
                        style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold;"
                        prefWidth="100" prefHeight="35"/>
            </HBox>
        </VBox>
    </top>
    
    <!-- Center Section: Main Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30;" alignment="TOP_CENTER">
            
            <Label text="Tournament Organizer Functions" style="-fx-font-weight: bold; -fx-font-size: 20px;"/>
            
            <!-- Tournament Management Grid -->
            <GridPane hgap="20" vgap="20" alignment="CENTER">
                
                <!-- View Registered Teams -->
                <VBox spacing="10" style="-fx-padding: 20; -fx-border-color: #2196F3; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-color: #f5f5f5;" 
                      prefWidth="280" prefHeight="180" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Label text="View Registered Teams" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                    <Label text="View all teams registered across tournaments" wrapText="true" style="-fx-text-fill: #666;"/>
                    
                    <Region VBox.vgrow="ALWAYS"/>
                    
                    <Button fx:id="viewTeamsButton" text="View Teams" 
                            onAction="#handleViewRegisteredTeams"
                            style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;"
                            prefWidth="200"/>
                </VBox>
                
                <!-- Approve Team -->
                <VBox spacing="10" style="-fx-padding: 20; -fx-border-color: #4CAF50; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-color: #f5f5f5;" 
                      prefWidth="280" prefHeight="180" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <Label text="Approve Team" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                    <Label text="Approve teams for tournament participation" wrapText="true" style="-fx-text-fill: #666;"/>
                    
                    <Region VBox.vgrow="ALWAYS"/>
                    
                    <Button fx:id="approveTeamButton" text="Approve Team" 
                            onAction="#handleApproveTeam"
                            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"
                            prefWidth="200"/>
                </VBox>
                
                <!-- Publish Schedule -->
                <VBox spacing="10" style="-fx-padding: 20; -fx-border-color: #FF9800; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-color: #f5f5f5;" 
                      prefWidth="280" prefHeight="180" GridPane.columnIndex="2" GridPane.rowIndex="0">
                    <Label text="Publish Schedule" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                    <Label text="Publish the tournament schedule for teams and public" wrapText="true" style="-fx-text-fill: #666;"/>
                    
                    <Region VBox.vgrow="ALWAYS"/>
                    
                    <Button fx:id="publishScheduleButton" text="Publish Schedule" 
                            onAction="#handlePublishSchedule"
                            style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold;"
                            prefWidth="200"/>
                </VBox>
                
                <!-- Collect Fees -->
                <VBox spacing="10" style="-fx-padding: 20; -fx-border-color: #9C27B0; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-color: #f5f5f5;" 
                      prefWidth="280" prefHeight="180" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <Label text="Collect Fees" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                    <Label text="Manage and collect registration fees from teams" wrapText="true" style="-fx-text-fill: #666;"/>
                    
                    <Region VBox.vgrow="ALWAYS"/>
                    
                    <Button fx:id="collectFeesButton" text="Collect Fees" 
                            onAction="#handleCollectFees"
                            style="-fx-background-color: #9C27B0; -fx-text-fill: white; -fx-font-weight: bold;"
                            prefWidth="200"/>
                </VBox>
                
                <!-- Find Sponsor -->
                <VBox spacing="10" style="-fx-padding: 20; -fx-border-color: #00BCD4; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-color: #f5f5f5;" 
                      prefWidth="280" prefHeight="180" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <Label text="Find Sponsor" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                    <Label text="Find and manage tournament sponsors" wrapText="true" style="-fx-text-fill: #666;"/>
                    
                    <Region VBox.vgrow="ALWAYS"/>
                    
                    <Button fx:id="findSponsorButton" text="Find Sponsor" 
                            onAction="#handleFindSponsor"
                            style="-fx-background-color: #00BCD4; -fx-text-fill: white; -fx-font-weight: bold;"
                            prefWidth="200"/>
                </VBox>
                
                <!-- Check Schedule -->
                <VBox spacing="10" style="-fx-padding: 20; -fx-border-color: #009688; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-color: #f5f5f5;" 
                      prefWidth="280" prefHeight="180" GridPane.columnIndex="2" GridPane.rowIndex="1">
                    <Label text="Check Schedule" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                    <Label text="Validate and review tournament schedule" wrapText="true" style="-fx-text-fill: #666;"/>
                    
                    <Region VBox.vgrow="ALWAYS"/>
                    
                    <Button fx:id="checkScheduleButton" text="Check Schedule" 
                            onAction="#handleCheckSchedule"
                            style="-fx-background-color: #009688; -fx-text-fill: white; -fx-font-weight: bold;"
                            prefWidth="200"/>
                </VBox>
                
                <!-- Assign Referees -->
                <VBox spacing="10" style="-fx-padding: 20; -fx-border-color: #3F51B5; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-color: #f5f5f5;" 
                      prefWidth="280" prefHeight="180" GridPane.columnIndex="0" GridPane.rowIndex="2">
                    <Label text="Assign Referees" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                    <Label text="Assign referees to tournament matches" wrapText="true" style="-fx-text-fill: #666;"/>
                    
                    <Region VBox.vgrow="ALWAYS"/>
                    
                    <Button fx:id="assignRefereesButton" text="Assign Referees" 
                            onAction="#handleAssignReferees"
                            style="-fx-background-color: #3F51B5; -fx-text-fill: white; -fx-font-weight: bold;"
                            prefWidth="200"/>
                </VBox>
                
                <!-- Postpone Match -->
                <VBox spacing="10" style="-fx-padding: 20; -fx-border-color: #f44336; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-color: #f5f5f5;" 
                      prefWidth="280" prefHeight="180" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <Label text="Postpone Match" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                    <Label text="Postpone a scheduled match to a new date" wrapText="true" style="-fx-text-fill: #666;"/>
                    
                    <Region VBox.vgrow="ALWAYS"/>
                    
                    <Button fx:id="postponeMatchButton" text="Postpone Match" 
                            onAction="#handlePostponeMatch"
                            style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold;"
                            prefWidth="200"/>
                </VBox>
                
                <!-- Show Request Menu -->
                <VBox spacing="10" style="-fx-padding: 20; -fx-border-color: #607D8B; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-color: #f5f5f5;" 
                      prefWidth="280" prefHeight="180" GridPane.columnIndex="2" GridPane.rowIndex="2">
                    <Label text="Request Menu" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                    <Label text="View and manage various tournament requests" wrapText="true" style="-fx-text-fill: #666;"/>
                    
                    <Region VBox.vgrow="ALWAYS"/>
                    
                    <Button fx:id="showRequestMenuButton" text="Show Requests" 
                            onAction="#handleShowRequestMenu"
                            style="-fx-background-color: #607D8B; -fx-text-fill: white; -fx-font-weight: bold;"
                            prefWidth="200"/>
                </VBox>
                
            </GridPane>
            
            <!-- Activity Log -->
            <Separator/>
            <Label text="Activity Log" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <TextArea fx:id="activityLogArea" editable="false" prefHeight="120" 
                      style="-fx-font-family: monospace;" wrapText="true"/>
            
        </VBox>
    </center>
    
    <!-- Bottom Section: Status Bar -->
    <bottom>
        <HBox style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
            <Label text="Status: " style="-fx-font-weight: bold;"/>
            <Label fx:id="statusLabel" text="Ready"/>
        </HBox>
    </bottom>
    
</BorderPane>
