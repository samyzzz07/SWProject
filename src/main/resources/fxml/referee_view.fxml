<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.tournament.ui.RefereeController">
    
    <top>
        <VBox spacing="10" style="-fx-background-color: #2196F3; -fx-padding: 20;">
            <Label fx:id="welcomeLabel" text="Welcome, Referee" textFill="white">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
            </Label>
            <Label text="Post Match Scores" textFill="white">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
        </VBox>
    </top>
    
    <center>
        <SplitPane dividerPositions="0.5">
            
            <!-- Left Panel: Match List -->
            <VBox spacing="15" style="-fx-padding: 20;">
                <Label text="Select a Match" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                <ListView fx:id="matchListView" prefHeight="400.0"/>
                <Button text="Refresh" onAction="#handleRefresh" 
                        style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
            </VBox>
            
            <!-- Right Panel: Match Details and Score Posting -->
            <VBox spacing="15" style="-fx-padding: 20;">
                <Label text="Match Details" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                <TextArea fx:id="matchDetailsArea" editable="false" prefHeight="200.0" 
                          style="-fx-background-color: #f5f5f5;"/>
                
                <Separator/>
                
                <Label text="Post Score" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                <Label text="Enter the final scores for the selected match" 
                       style="-fx-font-style: italic; -fx-text-fill: #666;"/>
                
                <HBox spacing="15">
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label text="Team 1 Score:"/>
                        <TextField fx:id="team1ScoreField" promptText="Enter Team 1 score" 
                                   style="-fx-font-size: 18px;"/>
                    </VBox>
                    
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label text="Team 2 Score:"/>
                        <TextField fx:id="team2ScoreField" promptText="Enter Team 2 score" 
                                   style="-fx-font-size: 18px;"/>
                    </VBox>
                </HBox>
                
                <Button fx:id="postScoreButton" text="Post Score" onAction="#handlePostScore"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;"
                        prefHeight="50.0"/>
                
                <Label text="Note: Scores can only be posted once per match" 
                       style="-fx-font-style: italic; -fx-text-fill: #999; -fx-font-size: 11px;"/>
            </VBox>
            
        </SplitPane>
    </center>
    
    <bottom>
        <HBox style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
            <Label text="Status: " style="-fx-font-weight: bold;"/>
            <Label fx:id="statusLabel" text="Ready"/>
        </HBox>
    </bottom>
    
</BorderPane>
